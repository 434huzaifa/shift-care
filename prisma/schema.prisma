// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Status {
  ACTIVE
  INACTIVE
  ON_LEAVE
  TERMINATED
}

enum Gender {
  MALE
  FEMALE
}

enum PriceType {
  WEEKLY
  HOURLY
  DAILY
  MONTHLY
}

model Staff {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  jobTitle        String
  nationality     String
  nationalityFlag String?
  location        String
  locationFlag    String?
  status          Status   @default(ACTIVE)
  gender          Gender
  isFav           Boolean  @default(false)
  profileImage    Bytes?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  shifts Shift[]
}

model Carer {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  gender       Gender
  profileImage Bytes?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Shift {
  id             Int       @id @default(autoincrement())
  staffId        Int
  priceAmount    Float
  priceType      PriceType
  start_time     DateTime
  end_time       DateTime
  recurrenceRule String?
  address        String
  bonus          Float?
  instruction    String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  staff Staff @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@index([staffId])
}
